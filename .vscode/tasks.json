{
    "version": "2.0.0",
    "tasks": [
    {
        "label": "cmake configure",
        "type": "shell",
        "command": "cmake",
        "args": ["-S", ".", "-B", "build"],//"-G", "Visual Studio 17 2022", "-A", "x64"
        "group": "build",
        "problemMatcher": []
    }
    ,
    {
        "label": "cmake build",
        "type": "shell",
        "command": "cmake",
        "args": ["--build", "build"],
        "group": "build",
        "dependsOn": "cmake configure",
        "problemMatcher": []
    }
    ,
    {
        "label": "build ficha Debug",
        "type": "shell",
        "command": "cmake",
        "args": ["--build", "build", "--target", "ficha"],
        "group": "build",
        "problemMatcher": []
    }
    ,
    {
        "label": "build ficha Release",
        "type": "shell",
        "command": "cmake",
        "args": ["--build", "build", "--config", "Release", "--target", "ficha"],
        "group": "build",
        "problemMatcher": []
    }
    ,
    {
        "label": "build reinas Debug",
        "type": "shell",
        "command": "cmake",
        "args": ["--build", "build", "--target", "reinas"],
        "group": "build",
        "problemMatcher": []
    }
    ,
    {
        "label": "build reinas Release",
        "type": "shell",
        "command": "cmake",
        "args": ["--build", "build", "--config", "Release", "--target", "reinas"],
        "group": "build",
        "problemMatcher": []
    }
   ]
}
